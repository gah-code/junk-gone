    align-items: flex-start;
    gap: 1em;
    padding: 3rem;
    max-width: 1200px;
    margin-inline: auto;
  }

  .section-services > :first-child {
    flex-basis: 200px;
    flex-grow: 1;
  }

  .section-services > :last-child {
    flex-basis: 300px;
    flex-grow: 9999;
  }

  span {
    display: inline-block;
    border-radius: 5px;
    margin: 3px auto;
    padding: 5px 0;
    text-align: center;
    max-width: 250px;
  }

  .flex1,
  .flex2,
  .flex3,
  .flex4,
  .flex5 {
    display: flex;
    outline: 2px solid black;
    margin-block: 1rem;
  }
  .flex1 > span {
    flex: 8.8%;
  }
  .flex2 > span {
    flex: 33.33%;
  }

  .what-we-take {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
