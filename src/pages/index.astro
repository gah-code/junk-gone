    align-items: start;
  }

  .flex-items {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    border: 5px solid #000;
  }

  .flex-items-inner {
    margin: 0.3rem 0.2rem;
    border: 5px solid #aaa;
    background-color: #000;
    color: #fff;
    padding: 0.1em;
    flex-shrink: 1;
    flex-basis: calc(45% - 1rem);
  }

  .section-services {
    display: flex;
