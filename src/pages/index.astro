---
import GlobalStyles from '../components/GlobalStyles.astro';
import Layout from '../layouts/Layout.astro';
import HomeBanner from '../components/HomeBanner.astro';
import Services from '../components/Services.astro';
import Header from '../components/Header.astro';
import Steps from '../components/Steps.astro';
import About from '../components/About.astro';
import { Image } from 'astro:assets';
import myImage from '../../public/image-1.jpeg'; // Image is 1600x900
---

<Layout title='Welcome to Astro.'>
  <GlobalStyles />
  <main>
    <Header />
    <HomeBanner />
    <section class='section' id='section--1'>
      <div class='section__title'>
        <h2 class='section__description'>LEAVE THE JUNK TO US!</h2>
        <h3 class='section__header'>
          Everything you need in a modern junk removal service
        </h3>
      </div>

      <div class='features'>
        <Image
          class='features__img lazy-img'
          src={myImage}
          alt='A description of my image.'
        />
        <div class='features__feature'>
          <div class='features__icon'>
            <svg>
              <use xlink:href='img/icons.svg#icon-monitor'></use>
            </svg>
          </div>
          <h5 class='features__header'>ECO- FRIENDLY</h5>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Unde alias
            sint quos? Accusantium a fugiat porro reiciendis saepe quibusdam
            debitis ducimus.
          </p>
        </div>

        <div class='features__feature'>
          <div class='features__icon'>
            <svg>
              <use xlink:href='img/icons.svg#icon-trending-up'></use>
            </svg>
          </div>
          <h5 class='features__header'>
            FAST AND SAFE JUNK REMOVAL HOLLISTER, CA
          </h5>
          <p>
            Nesciunt quos autem dolorum voluptates cum dolores dicta fuga
            inventore ab? Nulla incidunt eius numquam sequi iste pariatur
            quibusdam!
          </p>
        </div>
        <Image
          class='features__img lazy-img'
          src={myImage}
          alt='A description of my image.'
        />

        <img
          src='img/card-lazy.jpg'
          data-src='img/card.jpg'
          alt='Credit card'
          class='features__img lazy-img'
        />
        <div class='features__feature'>
          <div class='features__icon'>
            <svg>
              <use xlink:href='img/icons.svg#icon-credit-card'></use>
            </svg>
          </div>
          <h5 class='features__header'>
            Our team is professional, friendly and dedicated
          </h5>
          <p>
            Quasi, fugit in cumque cupiditate reprehenderit debitis animi enim
            eveniet consequatur odit quam quos possimus assumenda dicta fuga
            inventore ab.
          </p>
          <button>btn</button>
        </div>
      </div>
    </section>
    <div class='section__title'>
      <h2 class='section__description'>LEAVE THE JUNK TO US!</h2>
      <h3 class='section__header'>
        Everything you need in a modern bank and more.
      </h3>
    </div>

    <Steps />
    <div class='section__title'>
      <h2 class='section__description'>LEAVE THE JUNK TO US!</h2>
      <h3 class='section__header'>
        Everything you need in a modern bank and more.
      </h3>
    </div>
    <Services />
    <About />
  </main>
</Layout>

<style lang='scss'>
  main {
  }

  .grid-2-col {
    display: grid;
    grid-template-columns: 0.5fr 1.5fr;
    padding: 3rem;
    align-items: start;
  }

  .features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    column-gap: 3rem;
    row-gap: 5rem;
    margin: 10rem;
  }

  .features__img {
    width: 100%;
    height: auto; /* Ensures the image maintains its aspect ratio */
  }

  .features__feature {
    align-self: center;
    justify-self: center;
    width: 70%;
    font-size: 1.5rem;
  }

  .features__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-primary-opacity);
    height: 5.5rem;
    width: 5.5rem;
    border-radius: 50%;
    margin-bottom: 2rem;
  }

  .features__icon svg {
    height: 2.5rem;
    width: 2.5rem;
    fill: var(--color-primary);
  }

  .features__header {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .section {
    padding: 15rem 3rem;
    border-top: 1px solid #ddd;
    background-color: var(--clr-primary-800);
    transition:
      transform 1s,
      opacity 1s;
  }

  .section--hidden {
    opacity: 0;
    transform: translateY(8rem);
  }

  .section__title {
    width: 70%;
    margin: 9rem auto 0 auto;
    padding-bottom: 10rem;
  }

  .section__description {
    font-size: 1.8rem;

    font-weight: 600;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .section__header {
    font-size: 4rem;
    line-height: 1.3;
    font-weight: 500;
  }
</style>
