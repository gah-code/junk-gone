---
import Form from './Form.astro';
---

<div class='section-hero'>
  <div class='hero'>
    <div class='hero-text-box'>
      <div class='header__title'>
        <h1>
          LEAVE THE
          <!-- Green highlight effect -->
          <span class='highlight'>JUNK</span>
          TO US <br />
          <span class='highlight'>SAN JOSE</span>
        </h1>
        <p class='hero-description'>
          We handle the heavy lifting, so you don't have to! At Junk Gone
          Hauling and Junk Removal Services, we offer professional, reliable,
          and eco-friendly junk removal services tailored for San Jose residents
          and businesses.
        </p>
        <a href='#cta' class='btn btn--full margin-right-sm'>Get a quote</a>
      </div>
    </div>
    <Form />
  </div>
</div>

<style lang='scss'>
  .section-hero {
    outline: solid 3px #fdf2e9;
    /* padding: 4.8rem 0 9.6rem 0; */
    padding: max(4rem, 10vh) 0;
    /* background-color: #f3f3f3; */
  }

  .hero {
    /* 2080px */
    max-width: 130rem;
    margin: 0 auto;
    padding: 2rem 5rem;
    display: grid;
    /* grid-template-columns: 0.8fr 1.3fr; */
    grid-template-columns: minmax(300px, 0.9fr) minmax(330px, 1.1fr);
    gap: 4rem;
    place-items: center;
  }

  .hero-text-box {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;

    p {
      font-size: 2.2rem;
      font-weight: 500;
      color: rgb(43, 43, 43);
    }
  }
  .header__title {
    /* z-index: 100; */
    flex: 1;
    font-family: 'Poppins', sans-serif;
    font-style: bold;
    font-size: 4.4rem;
    line-height: 1.35;
    color: var(--clr-text);
    display: grid;
    font-weight: 700;
    /* grid-template-columns: 2fr 1fr; */
    row-gap: 4rem;
    align-content: center;
    justify-content: center;

    align-items: start;
    justify-items: start;
  }

  .highlight {
    position: relative;
  }

  .highlight::after {
    display: block;
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: -1;
    opacity: 0.6;
    transform: scale(1.07, 1.05) skewX(-15deg);
    background-image: var(--gradient-primary);
  }

  /* 
  @media (min-width: 801px) and (max-width: 1200px) {
    .hero {
      grid-template-columns: minmax(300px, 0.9fr) minmax(350px, 1.1fr);
    
  } */

  @media (max-width: 59em) {
    .hero {
      padding: 2rem 1rem;
      gap: 1rem;
      grid-template-columns: minmax(300px, 1fr) minmax(300px, 1fr);
    }

    .header__title {
      flex: 1;
      font-size: 3.5rem;
      display: grid;
      padding: 0 3rem;
      /* grid-template-columns: 4fr 1fr; */
      row-gap: 2rem;
    }

    .hero-text-box {
      background-color: rgba(254, 174, 117, 0.28);
    }
  }

  @media (max-width: 44em) {
    .hero {
      padding: 0 1rem;
      gap: 1rem;
      background-color: rgb(143, 122, 162);
      grid-template-columns: 1fr;
    }
  }
</style>
