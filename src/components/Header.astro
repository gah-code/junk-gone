---
import SectionContainer from './SectionContainer.astro';
import Logo from '../../public/logo-1.jpeg'; // Image is 1600x900
import { Image } from 'astro:assets';
---

<header>
  <nav class='nav'>
    <Image
      class='nav__logo lazy-img'
      src={Logo}
      alt='A description of my image.'
    />
    <ul class='nav__links'>
      <!-- <li class='nav__item'>
        <a class='nav__link' href='#section--1'>Features</a>
      </li> -->
      <li class='nav__item'>
        <a class='nav__link nav__link--btn btn--show-modal' href='#'>Call Now</a
        >
      </li>
    </ul>
  </nav>

  <style>
    /* NAVIGATION */
    .nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 9.5rem;
      width: 100%;
      padding: 0 3rem;
      z-index: 100;
    }

    /* nav and stickly class at the same time */
    .nav.sticky {
      position: fixed;
      background-color: rgba(255, 255, 255, 0.95);
    }

    .nav__logo {
      /* height: 4.5rem; */
      transition: all 0.3s;
      width: 145px;
      height: auto;
    }
    .nav__links {
      display: flex;
      align-items: center;
      list-style: none;
    }
    .nav__item {
      margin-left: 4rem;
    }

    .nav__link:link,
    .nav__link:visited {
      font-size: 1.8rem;
      font-weight: 500;
      color: #f4f2f2;
      text-decoration: none;
      display: block;
      transition: all 0.3s;
    }
    .nav__link--btn:link,
    .nav__link--btn:visited {
      padding: 1.3rem 3.1rem;
      border-radius: 3rem;
      background-color: var(--clr-primary-200);
      border: solid 3px var(--clr-secondary-100);
    }

    .nav__link--btn:hover,
    .nav__link--btn:active {
      color: inherit;
      background-color: var(--clr-primary-200);
      color: var(--clr-secondary-100);
    }
    header {
      /* padding: 2rem 0; */
    }
  </style>
</header>
